<%- include('partials/header') %>

<div class="home-content">
  <p><%= homePageDefaultContent %></p>
  <% if (postList.length >0) { %> <% for (i=0; i < postList.length; i++) { %>
  <div class="blog">
    <h1 class="blog-title">
      <%= postList[i].title %><span class="created-date">
        <%= postList[i].dateCreated %></span
      >
    </h1>
    <% const maxLength = 100 %>
    <!-- <p class="blog-content"><%= postList[i].blogContent.slice(0,maxLength) + (postList[i].blogContent.length > maxLength ? "...":"")%></p> -->
    <p class="blog-content"><%= postList[i].blogContent %></p>
    <a href="/post/<%= postList[i]._id %>">(READ MORE)</a>
  </div>
  <% } %> <% } %>
</div>

<%- include('partials/footer') %>
